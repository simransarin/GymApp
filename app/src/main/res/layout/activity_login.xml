<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbg"
    android:paddingBottom="100dp"
    android:paddingLeft="60dp"
    android:paddingRight="60dp"
    android:paddingTop="100dp"
    tools:context="com.innprojects.gymapp.activities.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/gymlogo" />

        <TextView
            android:id="@+id/textView"
            style="@style/textView_style"
            android:text="Member's Login"
            android:textColor="@color/whitesmoketransp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/login_background"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_weight="0.2"
                android:padding="2dp"
                android:src="@drawable/ic_action_username" />

            <EditText
                android:id="@+id/editText"
                style="@style/editTextLogin_style"
                android:hint="gym id"
                android:inputType="number" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/login_background"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_weight="0.2"
                android:padding="2dp"
                android:src="@drawable/ic_action_password" />

            <EditText
                android:id="@+id/editText2"
                style="@style/editTextLogin_style"
                android:hint="password"
                android:inputType="textPassword" />

        </LinearLayout>


        <Button
            android:id="@+id/login_button"
            style="@style/buttonlogin_style"
            android:text="Log in"
            android:textAllCaps="false" />

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:hapticFeedbackEnabled="true"
            android:text="Show Password"
            android:textColor="@color/whitesmoke" />

        <CheckBox
            android:id="@+id/checkboxmachine2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:hapticFeedbackEnabled="true"
            android:text="Remember Me"
            android:textColor="@color/whitesmoke"/>

        <!--<TextView-->
        <!--android:id="@+id/textView2"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="start"-->
        <!--android:gravity="start"-->
        <!--android:layout_weight="0.5"-->
        <!--android:text="Show password"-->
        <!--android:textColor="#FFF" />-->

    </LinearLayout>

</RelativeLayout>
